<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="create-department" author="isidora">
        <sqlFile path="ddl/create-department.sql" relativeToChangelogFile="true"/>
    </changeSet>
    <!-- Kreiraj tabelu subject  -->
    <changeSet id="create-subject" author="isidora">
        <sqlFile path="ddl/create-subject.sql" relativeToChangelogFile="true"/>
    </changeSet>
    <!-- popuni tabelu academic title-->
    <changeSet id="init-academic-title" author="isidora">
        <sqlFile path="dml/init-department.sql" relativeToChangelogFile="true"/>
    </changeSet>
    <changeSet id="init-subject" author="isidora">
        <sqlFile path="dml/init-subject.sql" relativeToChangelogFile="true"/>
    </changeSet>
</databaseChangeLog>